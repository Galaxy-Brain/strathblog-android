<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steven.blogapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.steven.blogapp.EditUserInfoActivity"></activity>
        <activity android:name="com.steven.blogapp.CommentActivity" />
        <activity android:name="com.steven.blogapp.EditPostActivity" />
        <activity android:name="com.steven.blogapp.AddPostActivity" />
        <activity android:name="com.steven.blogapp.HomeActivity" />
        <activity android:name="com.steven.blogapp.UserInfoActivity" />
        <activity android:name="com.steven.blogapp.AuthActivity" />
        <activity android:name="com.steven.blogapp.OnBoardActivity" />
        <activity android:name="com.steven.blogapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>